{
    "env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"extends": ["airbnb", "prettier"],
	"ecmaVersion": 6,
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"plugins": ["react", "eslint-plugin-github"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "double"],
		"semi": ["error", "always"]
	}
}
